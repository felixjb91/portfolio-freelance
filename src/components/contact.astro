<section id="contact" class="w-full py-12 border-t border-[#ffffff10]">
  <div class="max-w-5xl mx-auto">
    <h2 class="text-lg text-[var(--sec)] mb-2 shiny-sec">Discutons de votre projet</h2>
    <h3 id="contact-heading" class="text-4xl md:text-5xl font-medium text-[var(--white)] mb-6">
      Contact & devis
    </h3>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <div class="text-[var(--white-icon)]">
        <p class="mb-4">
            Une question ou un projet en tête ? Contactez moi.
        </p>
        <div class="flex items-center gap-2">
          <span>Localisation:</span>
          <span class="text-[var(--white)]">France, Paris</span>
        </div>
      </div>

      <div>
        <form
          id="contact-form"
          aria-labelledby="contact-heading"
          class="flex flex-col gap-4"
        >
          <div>
            <label for="name" class="sr-only">Nom complet</label>
            <input
              id="name"
              type="text"
              name="name"
              placeholder="Nom"
              aria-required="true"
              aria-describedby="form-error"
              class="w-full px-4 py-2 bg-[var(--background-card)] text-[var(--white)] border border-[var(--white-icon-tr)] rounded-lg focus:outline-none focus:ring-2 focus:ring-[var(--sec)]"
            />
          </div>
          <div>
            <label for="email" class="sr-only">Adresse email</label>
            <input
              id="email"
              type="email"
              name="email"
              placeholder="Email"
              aria-describedby="form-error"
              class="w-full px-4 py-2 bg-[var(--background-card)] text-[var(--white)] border border-[var(--white-icon-tr)] rounded-lg focus:outline-none focus:ring-2 focus:ring-[var(--sec)]"
            />
          </div>
          <div>
            <label for="phone" class="sr-only">Numéro de téléphone</label>
            <input
              id="phone"
              type="tel"
              name="phone"
              placeholder="Téléphone"
              aria-describedby="form-error"
              class="w-full px-4 py-2 bg-[var(--background-card)] text-[var(--white)] border border-[var(--white-icon-tr)] rounded-lg focus:outline-none focus:ring-2 focus:ring-[var(--sec)]"
            />
          </div>
          <div>
            <label for="message" class="sr-only">Votre message</label>
            <textarea
              id="message"
              name="message"
              placeholder="Message"
              rows="6"
              aria-required="true"
              aria-describedby="form-error"
              class="w-full px-4 py-2 bg-[var(--background-card)] text-[var(--white)] border border-[var(--white-icon-tr)] rounded-lg focus:outline-none focus:ring-2 focus:ring-[var(--sec)] resize-none"
            ></textarea>
          </div>
          <button
            type="submit"
            id="submit-btn"
            class="px-4 py-3 bg-purple-500/20 text-[var(--white)] rounded-lg transition-all hover:bg-purple-500/30 disabled:opacity-50 disabled:cursor-not-allowed flex items-center justify-center gap-2"
          >
            <span id="btn-text">Envoyer</span>
            <svg id="btn-loader" class="hidden animate-spin h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
              <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
          </button>
        </form>
        <div
          id="form-error"
          role="alert"
          aria-live="polite"
          class="hidden mt-4 text-red-400 text-sm"
        >
        </div>
        <div
          id="form-message"
          role="status"
          aria-live="polite"
          class="hidden justify-center items-center mt-4 text-[var(--white)] text-lg"
        >
          ✅ Merci pour votre message !
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  import { parsePhoneNumberFromString } from 'libphonenumber-js';

  const form = document.getElementById("contact-form") as HTMLFormElement;
  const formMessage = document.getElementById("form-message");
  const formError = document.getElementById("form-error");
  const submitBtn = document.getElementById("submit-btn") as HTMLButtonElement;
  const btnText = document.getElementById("btn-text");
  const btnLoader = document.getElementById("btn-loader");

  const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;

  form.addEventListener("submit", async (e) => {
    e.preventDefault();
    formError!.classList.add("hidden");
    formError!.textContent = "";

    const name = (form.elements.namedItem("name") as HTMLInputElement).value.trim();
    const email = (form.elements.namedItem("email") as HTMLInputElement).value.trim();
    const phone = (form.elements.namedItem("phone") as HTMLInputElement).value.trim();
    const message = (form.elements.namedItem("message") as HTMLTextAreaElement).value.trim();

    const errors: string[] = [];

    if (!name) {
      errors.push("Le nom est requis");
    }

    if (!email && !phone) {
      errors.push("L'email ou le téléphone est requis");
    }

    if (email && !emailRegex.test(email)) {
      errors.push("Format d'email invalide");
    }

    if (phone) {
      const phoneNumber = phone.startsWith('+')
        ? parsePhoneNumberFromString(phone)
        : parsePhoneNumberFromString(phone, 'FR');

      if (!phoneNumber) {
        errors.push("Numéro de téléphone non reconnu");
      } else if (!phoneNumber.isValid()) {
        errors.push("Numéro de téléphone invalide (vérifiez le nombre de chiffres)");
      }
    }

    if (!message) {
      errors.push("Un message est requis");
    }

    if (errors.length > 0) {
      formError!.innerHTML = errors.join("<br>");
      formError!.classList.remove("hidden");
      return;
    }

    // Show loader
    submitBtn.disabled = true;
    btnText!.classList.add("hidden");
    btnLoader!.classList.remove("hidden");

    try {
      const response = await fetch("https://n8n.feltech.fr/webhook/portfolio/contact-form", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ name, email, phone, message }),
      });
      if (response.ok) {
        form.reset();
        form.style.display = "none";
        formMessage!.classList.remove("hidden");
        formMessage!.classList.add("flex");
      } else {
        console.error("Error response:", response.status);
        formError!.textContent = "Une erreur est survenue lors de l'envoi.";
        formError!.classList.remove("hidden");
      }
    } catch (error) {
      console.error("Error:", error);
      formError!.textContent = "Une erreur est survenue lors de l'envoi.";
      formError!.classList.remove("hidden");
    } finally {
      // Hide loader
      submitBtn.disabled = false;
      btnText!.classList.remove("hidden");
      btnLoader!.classList.add("hidden");
    }
  });
</script>
